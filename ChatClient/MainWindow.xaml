<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox Name="tbUserName" Height="23" Margin="105,9,10,0" TextWrapping="Wrap" Text="Имя юзера" VerticalAlignment="Top"/>
        <Button Name="bConnDiscon" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="bConnDiscon_Click"/>
        <ListBox Name="lbChat" Height="262" Margin="10,47,10,0" VerticalAlignment="Top"/>
        <TextBox Name="tbMessage" Margin="10,314,10,10" TextWrapping="Wrap" Text="" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
